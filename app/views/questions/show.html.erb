<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Question detail</h2>
        <ol class="breadcrumb">
            <li>
                Home
        </li>
        <li class="active">
            <strong>Question detail</strong>
        </li>
    </ol>
</div>
        </div>
<div class="row">
<div class="col-lg-9">
<div class="wrapper wrapper-content animated fadeInUp">
<div class="ibox">
<div class="ibox-content">
<div class="row">
    <div class="col-lg-12">
        <div class="m-b-md">
            <%= link_to 'Edit Question', edit_question_path(@question), class: "btn btn-white btn-xs pull-right" %>
            <h2>Details</h2>
        </div>
        <dl class="dl-horizontal">
            <dt>Status:</dt>
            <dd><span class="label <%= @question.active ? 'label-primary' : 'label-default' %>"><%= @question.active ? 'Active' : 'InActive' %></span></dd>
        </dl>
    </div>
</div>
<div class="row">
    <div class="col-lg-5">
        <dl class="dl-horizontal">
            <dt>Title:</dt>
            <dd><%= @question.title %></dd>
            <dt>Placeholder:</dt>
            <dd><%= @question.placeholder %></dd>
            <dt>Question Type:</dt>
            <dd><%= @question.question_type %></dd>
            <dt>For Doctor:</dt>
            <dd><%= @question.user.try(:full_name) %></dd>
            <dt>Question options:</dt>
            <dd>
            	<ul>
            		<% @question.options.each do |option| %>
            			<li><%= option %></li>
            		<% end %>
            	</ul>
            </dd>
            <dt>Required:</dt>
            <dd><%= @question.required %></dd>
        </dl>
    </div>

    <div class="col-lg-7" id="cluster_info">

    </div>
</div>

</div>

</div>

</div>
</div>
</div>
</div>
</div>
</div>
</div>

</div>

