<% @current_month_count = Appointment.between(Date.today.beginning_of_month, Date.today.end_of_month).count %>
<% @current_year_count = Appointment.between(Date.today.beginning_of_year, Date.today.end_of_year).count %>

<div class="wrapper wrapper-content">
	<div class="row">
	    <div class="col-lg-6">
	        <div class="ibox float-e-margins">
	            <div class="ibox-title">
	                <h5>Registrations</h5>
	                <div class="ibox-tools">
	                    <a class="collapse-link">
	                        <i class="fa fa-chevron-up"></i>
	                    </a>
	                </div>
	            </div>
	            <div class="ibox-content ibox-heading">
	                <h3>
	                    Clients
	                    <div class="stat-percent text-navy"><%= User.count %></div>
	                </h3>
	                <small><i class="fa fa-stack-exchange"></i> New Client data from the previous quarter.</small>
	            </div>
	    </div>
	</div>



	<div class="col-lg-6">
	    <div class="ibox float-e-margins">
	        <div class="ibox-title">
	            <h5>Export Data</h5>
	            <div class="ibox-tools">
		            <%= form_tag(generate_csv_path(format: :csv)) do %>
					  <div class="form-group">
			            <%= select_tag :user_id, options_from_collection_for_select(User.doctors, "id", "full_name", params[:user_id]), prompt: "Select User", class: "form-control m-b" %>
			        </div>
			        <div class="form-group">
			        	<div class="row">
			        		<div class="col-md-6">
			           			<%= date_field_tag :start_date, params[:start_date] || Date.today, class: "form-control" %>
			           		</div>
			           		<div class="col-md-6">
	                    		<%= date_field_tag :end_date, params[:end_date] || Date.today, class: "form-control" %>
							</div>
						</div>
					</div>

					  <%= submit_tag "Download CSV", class: "btn btn-primary btn-xs" %>
					<% end %>
	            </div>
	        </div>

	    </div>
	</div>
</div>



<div class="wrapper wrapper-content">
<div class="row">
    <div class="col-md-3">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <span class="label label-success pull-right">Total Visit</span>
                <h5>Total Visits</h5>
            </div>
            <div class="ibox-content">
                <h1 class="no-margins"><%= Appointment.count %></h1>
                <small>Total visits</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <span class="label label-info pull-right">Monthly</span>
                <h5>Visits</h5>
            </div>
            <div class="ibox-content">
                <h1 class="no-margins"><%= @current_month_count %></h1>
                <small>Total monthly visits</small>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <span class="label label-primary pull-right">Yearly</span>
                <h5>Visits</h5>
            </div>
            <div class="ibox-content">

                <div class="row">
                    <div class="col-md-12">
                        <h1 class="no-margins"><%= @current_year_count %></h1>
                		<small>Total yearly visits</small>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

</div>
